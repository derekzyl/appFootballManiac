{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "ES2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".", // all paths are relative to the baseUrl
    "paths": {
      "@src/*":["src/*"],
      "@components/*":["src/components/*"],
      "@screens/*":["src/screens/*"],
      "@assets/*":["src/assets/*"],
      "@theme/*":["src/theme/*"],
      "@hooks/*":["src/hooks/*"],
      "@lib/*":["src/lib/*"]
    },
    "typeRoots": ["./env.d.ts", "./types", "./node_modules/@types", "./src/theme"],
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}